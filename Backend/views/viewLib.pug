extends layout 

block navHeader 
    include includes/navHeader.pug

block content
    div(class='finished-details')
        h2=details.title 
        h4="By " 
            a(href='/profile/'+details.creator)=details.creator
        h4=" and You!"
        div(class='report-button')="Report"
    div(class='finished-lib')
        h2=content.madlib
        div(class="nav-options")  
            form(style={margin:"0 auto"} action="/save", method="post") 
                input(type="hidden", name="details" value=details)
                input(type="hidden", name="content" value=content.madlib)
                input(type="submit", value="Save Lib")
            form(style={margin:"0 auto"} action="/play", method="get")
                input(type="submit", value="New Lib")
            form(style={margin:"0 auto"} action="/play" + details.creator, method="get")
                input(type="submit", value="Play Again")
