extends layout 

block navHeader 
    include includes/navHeader.pug

block content 
    div(class='header')
        h3="It's your profile"
    div(class='edit-profile-btn')
        input(class='profile-button' id='edit-profile' type='submit' value='Edit Profile')
        
    div(class='content')
        h2='Liked Libs'
        table(class='profile-table')
            thead 
                tr
                    th Name 
                    th Creator
            tbody 
                tr 
                    td Uncle Lester's Out House 
                    td Mad-Liberace
                tr 
                    td Day At the Zoo
                    td LongTrunk
                    
    div(class='content')
        h2='Saved Libs'
        table(class='profile-table')
            thead 
                tr 
                    th Name 
            tbody
                tr
                    td My First Banana 
                tr 
                    td My Second Guava